.mobile-header-content{
  width:100%;
  height:0%;
  opacity:0;
  transition: .250s;
  position: fixed;
  &.active{
    z-index:9;
    height:100%;
    opacity: 1;
  }

  .icons{
    width:30px;
    height:30px;
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
  }
  #money-mobile{
    background-image: url("<%= image_path('public/Donate-Grey.svg') %>");
  }
  #activation-mobile{
    background-image: url("<%= image_path('public/Volunteer-Grey.svg') %>");
  }
  #account-mobile{
    background-image: url("<%= image_path('public/Account-Grey.svg') %>");
  }
}
